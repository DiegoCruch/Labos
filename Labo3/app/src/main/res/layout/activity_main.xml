<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/Id_Ten"
        android:layout_width="@dimen/ImageSize"
        android:layout_height="@dimen/ImageSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Image_Five"
        app:layout_constraintTop_toTopOf="@+id/Image_Five"
        app:srcCompat="@drawable/ten_cents" />

    <ImageView
        android:id="@+id/Image_Quarter"
        android:layout_width="@dimen/ImageSize"
        android:layout_height="@dimen/ImageSize"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toStartOf="@+id/Image_DOLLAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IdFive"
        app:srcCompat="@drawable/quarter" />

    <ImageView
        android:id="@+id/Image_Five"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/Id_Ten"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_result"
        app:srcCompat="@drawable/five_cents" />

    <ImageView
        android:id="@+id/Image_DOLLAR"
        android:layout_width="@dimen/ImageSize"
        android:layout_height="@dimen/ImageSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Image_Quarter"
        app:layout_constraintTop_toTopOf="@+id/Image_Quarter"
        app:srcCompat="@drawable/one_dollar" />

    <TextView
        android:id="@+id/IdQuarter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.25"
        app:layout_constraintEnd_toEndOf="@+id/Image_Quarter"
        app:layout_constraintStart_toStartOf="@+id/Image_Quarter"
        app:layout_constraintTop_toBottomOf="@+id/Image_Quarter" />

    <TextView
        android:id="@+id/IdFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="$0.05"
        app:layout_constraintEnd_toEndOf="@+id/Image_Five"
        app:layout_constraintStart_toStartOf="@+id/Image_Five"
        app:layout_constraintTop_toBottomOf="@+id/Image_Five" />

    <TextView
        android:id="@+id/id_ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="$0.10"
        app:layout_constraintEnd_toEndOf="@+id/Id_Ten"
        app:layout_constraintStart_toStartOf="@+id/Id_Ten"
        app:layout_constraintTop_toBottomOf="@+id/Id_Ten" />

    <TextView
        android:id="@+id/Id_dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1"
        app:layout_constraintEnd_toEndOf="@+id/Image_DOLLAR"
        app:layout_constraintStart_toStartOf="@+id/Image_DOLLAR"
        app:layout_constraintTop_toBottomOf="@+id/Image_DOLLAR" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="Cantidad de dinero"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>